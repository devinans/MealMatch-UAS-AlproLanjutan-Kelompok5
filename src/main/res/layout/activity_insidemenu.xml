<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsideMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Restoran dan Cafe"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserratbold"
        android:paddingLeft="25dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/ygkmcari" />

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ygkmcari"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="15dp"
        android:padding="18dp"
        android:elevation="5dp"
        android:fontFamily="@font/robotomedium"
        android:hint="Pencarian"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/trending"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/edt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserratmedium"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Rekomendasi"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/trending"
        android:id="@+id/restoncafe">

        <ImageView
            android:layout_width="330dp"
            android:layout_height="168dp"
            android:src="@drawable/pic1"
            android:layout_marginBottom="6dp"/>
        <ImageView
            android:layout_width="330dp"
            android:layout_height="168dp"
            android:src="@drawable/pic2"
            android:layout_marginBottom="6dp"/>
        <ImageView
            android:layout_width="330dp"
            android:layout_height="168dp"
            android:src="@drawable/pic3"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/restoncafe"
        android:layout_marginTop="-42dp"
        android:gravity="center_horizontal"
        android:src="@drawable/navbar" />


</RelativeLayout>